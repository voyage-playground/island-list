{% extends 'base.j2' %} 

{% block body %}
<div class="mt-16 grid grid-cols-2 gap-8">
  <div>
    <img class="w-full" src="{{url_for('static', filename='islands/' + island.id|string + '.svg')}}"></img>
  </div>
  <div>
    <h3 class="text-xl font-bold mb-4">{{ island.name }}</h3>
    <p class="mb-4">{{ island.description }}</p>
    <h3 class="text-xl font-bold">Location</h3>
    <p class="mb-4">{{ island.location }}</p>
  </div>
</div>
<div class="flex justify-between">
  <h2 class="text-3xl font-bold mb-4 mt-8">Offers</h2>
  <button
  class="inline-flex items-center px-4 py-2 bg-cyan-700 border border-transparent rounded-md font-semibold text-lg text-white uppercase">
    Make Offer
  </button>
</div>
<div class="shadow p-8">
  <h3 class="text-lg font-bold">Jaden</h3>
  <p>3.2 Million</p>
</div>
{% endblock %}
