<form action="{{url_for('routes.add_offer', slug=island.slug)}}" method="POST">
  {{ form.csrf_token }}
  <div class="overflow-hidden">
    <input placeholder="Name" type="text" name="name" id="name" class="mt-1 focus:ring-teal-400 focus:border-teal-400 block w-full shadow-sm text-lg border-gray-300 rounded-md">
    <input placeholder="Offer (In Millions)" type="number" name="offer" id="offer" class="mt-4 focus:ring-teal-400 focus:border-teal-400 block w-full shadow-sm text-lg border-gray-300 rounded-md">
    <button type="submit" class="mt-4 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-teal-400">Submit Offer</button>
  </div>
</form>